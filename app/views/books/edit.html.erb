<h1>Editing Book</h1>

<%= form_with model: @book, url: update_book_path(@book), method: :patch do |f| %>




  <% if @book.errors.any? %>
   <%= @book.errors.count %>error
   <ul>
     <% @book.errors.full_messages.each do |message| %>
     <li><%= message %></li>
     <% end %>

   </ul>
   <% end %>




<h5>title</h5>
<%= f.text_field :title %>

<h5>body</h5>
<%= f.text_area :body %>

<%= f.submit 'Update Book' %>

<% end %>

<div class="link_book">
<p><%= link_to "Show", show_book_path(@book) %></p>
<p><%= link_to "Back", index_book_path %></p>
</div>
