

<body>




<h1>Books</h1>
 <table>
   <thead>
     <tr>
     <th class="title_logo">Title</th>
     <th class="body_logo">Body</th>
     <th colspan="3"></th>
     </tr>

   </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
      </tr>
      <% end %>


    </tbody>
 </table>

</table>
<h2 class="sub-zone">New book</h2>



<%= form_with model: @book do |f| %>
<h4 class="sub-zone">Title</h4>
<%= f.text_field :title %>

<h4 class="sub-zone">Body</h4>
<%= f.text_area :body %>

<%= f.submit 'create book' %>
<% end %>
</body>

