


<body>


<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "show", show_book_path(book) %></td>
      <td><%= link_to "edit", edit_book_path(book) %></td>
      <td><%= link_to "destroy", destroy_book_path(book),method: :delete,"data-confirm"=>"Are you sure?" %></td>
    </tr>
    <% end %>
  </tbody>


</table>
<h2 class="sub-zone">New book</h2>



<%= form_with model: @book do |f| %>


  <% if @book.errors.any? %>
   <%= @book.errors.count %>!Error! try it again.
   <ul>
     <% @book.errors.full_messages.each do |message| %>
     <li><%= message %></li>
     <% end %>

   </ul>
   <% end %>


<h4 class="sub-zone">Title</h4>
<%= f.text_field :title %>

<h4 class="sub-zone">Body</h4>
<%= f.text_area :body %>

<%= f.submit 'create book' %>
<% end %>
</body>

